<div class="new_post">
  <h1>新規投稿</h1>
  <div class="container">
    <div class="box3">
      <div class="box-inner">
        <%= form_with model: @tweet, local: true do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <div class="update-content">
            <div class="row">
              <%= f.label :body, "投稿内容入力" %>
              <%= f.text_area :body, class: "form-control", autofocus: true %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :image, "画像アップロード" %>
              <%= f.file_field(:image) %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.submit "投稿", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
